<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xmlns:task="http://www.springframework.org/schema/task"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
			http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd
			http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd">

	<!-- demo -->
	<jpa:repositories base-package="org.gx.bos.demo.repository" entity-manager-factory-ref="entityManagerFactory_gx-bos"
		transaction-manager-ref="transactionManager_gx-bos" factory-class="org.macula.core.repository.MaculaJpaRepositoryFactoryBean" />
	<!-- exam -->
	<jpa:repositories base-package="org.gx.bos.exam.repository" entity-manager-factory-ref="entityManagerFactory_gx-bos"
		transaction-manager-ref="transactionManager_gx-bos" factory-class="org.macula.core.repository.MaculaJpaRepositoryFactoryBean" />
	
	<!-- dealer -->
	<jpa:repositories base-package="org.gx.bos.base.core.dealer.repository" entity-manager-factory-ref="entityManagerFactory_gx-bos"
		transaction-manager-ref="transactionManager_gx-bos" factory-class="org.macula.core.repository.MaculaJpaRepositoryFactoryBean" />
	
	<!-- user -->
	<jpa:repositories base-package="org.gx.bos.base.core.user.repository" entity-manager-factory-ref="entityManagerFactory_gx-bos"
		transaction-manager-ref="transactionManager_gx-bos" factory-class="org.macula.core.repository.MaculaJpaRepositoryFactoryBean" />
	
	<!-- info -->
	<jpa:repositories base-package="org.gx.bos.info.repository" entity-manager-factory-ref="entityManagerFactory_gx-bos"
		transaction-manager-ref="transactionManager_gx-bos" factory-class="org.macula.core.repository.MaculaJpaRepositoryFactoryBean" />
	
	<!-- courseInfo -->
	<jpa:repositories base-package="org.gx.bos.course.repository" entity-manager-factory-ref="entityManagerFactory_gx-bos"
		transaction-manager-ref="transactionManager_gx-bos" factory-class="org.macula.core.repository.MaculaJpaRepositoryFactoryBean" />

</beans> 